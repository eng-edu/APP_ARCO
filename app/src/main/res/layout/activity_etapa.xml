<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/folha2"
    tools:context=".EtapaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/id_etapa_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/caveat_brush"
            android:text="TITULO ETAPA"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/id_etapa_moeda1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:srcCompat="@mipmap/ic_star1" />

            <ImageView
                android:id="@+id/id_etapa_moeda2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:srcCompat="@mipmap/ic_star1" />

            <ImageView
                android:id="@+id/id_etapa_moeda3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:srcCompat="@mipmap/ic_star1" />

            <ImageView
                android:id="@+id/id_etapa_moeda4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:srcCompat="@mipmap/ic_star1" />

            <ImageView
                android:id="@+id/id_etapa_moeda5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:srcCompat="@mipmap/ic_star1" />

        </LinearLayout>


        <EditText
            android:id="@+id/id_etapa_texto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/caveat_brush"
            android:padding="5dp"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/lightgray"
            android:textColorHint="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/id_etapa_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgray"
            android:text="EDITAR"
            android:textColor="@color/backgroundcolor" />

        <Button
            android:id="@+id/id_etapa_finalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="FINALIZAR ETAPA"
            android:textColor="@color/backgroundcolor" />

    </LinearLayout>

</ScrollView>