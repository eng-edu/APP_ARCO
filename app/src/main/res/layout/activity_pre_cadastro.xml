<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreCadastroActivity">

    <ImageView
        android:id="@+id/id_precadastro_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/id_precadastro_texto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/id_precadastro_avancar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="AVANÃ‡AR"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/id_precadastro_lider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="LIDER"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/id_precadastro_menbro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MEMBRO"
        android:textColor="@color/colorPrimaryDark" />


</LinearLayout>