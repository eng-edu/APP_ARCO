<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/id_perfil_pontos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="153 pontos"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="italic" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Id_perfil_image_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_user"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp" />


        <EditText
            android:id="@+id/id_nome_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="NOME:"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/id_idade_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="IDADE:"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/id_cadastro_radiogroup_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SEXO:"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/id_perfil_sexo_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:text="M"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/id_perfil_sexo_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:buttonTint="@color/colorAccent"
                android:text="F"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp" />


        </RadioGroup>

        <EditText
            android:id="@+id/id_perfil_escolaridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="ESCOLARIDADE:"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/id_email_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="EMAIL:"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />


        <Button
            android:id="@+id/id_perfil_alterar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="EDITAR"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
    </LinearLayout>


</ScrollView>