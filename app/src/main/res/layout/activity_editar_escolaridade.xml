<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".act.EditarEscolaridadeActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="10dp"
        android:background="@color/backgroundcolor"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/id_editar_escolaridade_titiulo_imagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />

        <ImageView
            android:id="@+id/id_editar_escolaridade_anexo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_can" />

        <TextView
            android:layout_marginTop="-1dp"
            android:layout_gravity="center"
            android:id="@+id/id_editar_escolaridade_procurarimagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Procurar Imagem"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/id_editar_escolaridade_instituicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/id_editar_escolaridade_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/id_editar_escolaridade_ano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/id_editar_escolaridade_grupos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/id_editar_escolaridade_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />


        <Button
            android:id="@+id/id_editar_escolaridade_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="SALVAR"
            android:textColor="@color/backgroundcolor"
            android:textSize="12sp" />
    </LinearLayout>

</ScrollView>