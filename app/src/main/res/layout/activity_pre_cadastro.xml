<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/folha2"
    android:orientation="vertical"
    tools:context=".PreCadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/id_precadastro_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="false"
            android:editable="false"
            android:fontFamily="@font/caveat_brush"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/id_precadastro_avancar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AVANÃ‡AR"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/backgroundcolor"
            android:textSize="12sp" />/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/id_precadastro_lider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIDER"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/backgroundcolor"
            android:textSize="12sp" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="01dp"
            android:id="@+id/id_precadastro_menbro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEMBRO"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/backgroundcolor"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>